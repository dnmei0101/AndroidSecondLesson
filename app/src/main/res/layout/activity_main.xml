<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_green">
    <TextView
        android:id="@+id/header_calc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Калькулятор"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edit_text_form"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/header_calc"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/edit_text_form"
        android:layout_toLeftOf="@id/button_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>
    <Button
        android:id="@+id/button_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:textSize="20sp"
        android:backgroundTint="@color/black"

        android:layout_below="@+id/edit_text_form"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>
    <Button
        android:id="@+id/button_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@id/edit_text_form"
        android:layout_toRightOf="@id/button_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>
    <Button
        android:id="@+id/button_4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_margin="0dp"
        android:layout_below="@+id/button_1"
        android:layout_toLeftOf="@id/button_5"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="5"
        android:textSize="20sp"
        android:layout_margin="0dp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/button_2"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="6"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_margin="0dp"
        android:layout_below="@+id/button_3"
        android:layout_toRightOf="@id/button_5"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="7"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_margin="0dp"
        android:layout_below="@+id/button_5"
        android:layout_toLeftOf="@id/button_8"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="8"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_margin="0dp"
        android:layout_below="@+id/button_5"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/button_9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="9"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_margin="0dp"
        android:layout_below="@+id/button_6"
        android:layout_toRightOf="@id/button_8"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/plus_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/button_8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/minus_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/plus_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/multi_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="X"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/minus_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>
    <Button
        android:id="@+id/division_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="÷"
        android:textSize="20sp"
        android:backgroundTint="@color/black"
        android:layout_below="@+id/multi_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


</RelativeLayout>